.machine {
  height: 200px;
  padding: 5px;
  border: solid 1px #c3c3c3;
  box-sizing: border-box;
  border-radius: 4px;
  overflow-x: auto;
}

.machinecontainer {
  height: 100%;
  width: 100%;
  display: inline-flex;
}

.flash {
  display: inline-block;
  box-sizing: border-box;
  width: 12.5%;
  height: 100%;
  max-width: 60px;
  min-width: 30px;
}

.flashcontainer {
  width: 100%;
  height: 100%;
  padding: 2px;
}

.flashContent {
  width: 100%;
  height: 100%;
  cursor: pointer;
  background: #c2d1e8;
  border: solid 2px #85a5d3;
  border-radius: 4px;
  color: #000;
}

.flashContent:hover {
  border: dotted 2px #1890ff;
  color: #1890ff;
  padding: 0px;
}

.critical {
  background-color: #f5222d;
  border: solid 2px #a3131b;
}
.degraded {
  background-color: #faad14;
  border: solid 2px #c28710;
}
.healthy {
  background-color: #c2d1e8;
}
.unknown {
  background-color: #fff;
  border: solid 2px #000;
}
.unknown .dot {
  background-color: #d9d9d9;
}
.healthy .dot {
  background-color: #52c41a;
}
.critical .dot {
  background-color: #f5222d;
}

.bay {
  display: -ms-grid;
}

