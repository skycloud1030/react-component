.flashContent .header {
  width: 100%;
  height: 20%;
  border-left-width: 0px;
  border-right-width: 0px;
  text-align: center;
}

.flashContent .body {
  width: 100%;
  height: 60%;
  display: inline-flex;
  flex-wrap: wrap;
}

.flashContent .footer {
  width: 100%;
  height: 15%;
  display: flex;
  justify-content: space-evenly;
}

.dot {
  position: relative;
  top: -1px;
  display: inline-block;
  width: 6px;
  height: 6px;
  vertical-align: middle;
  border-radius: 50%;
}

